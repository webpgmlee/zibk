var transferFlag = "N";
var popWin="";
$(function() {
	var hold = true;
	$('.gnb > dd > a').on('click',function() {
		if(!$(this).parent().hasClass('on')){
			$(this).parent().siblings().removeClass('on');
			$(this).parent().siblings().removeClass('cus');
			$(this).parent().addClass('on');
		}else{
			$(this).parent().siblings().removeClass('on');
			$(this).parent().removeClass('on');
		};
	});

	// CI클릭 메인으로 이동
	$("h1").click(function(){
		parent.location.href="/index.do";
	});

	$(".cti").hide();
	//CTI 로그인 여부 체크
	if($("#ctiYn").val() == "Y"){
		CTILogin();
	}

	CTIState();  // 현재 상담원 상태값 받기

	// 작업 상태 변경
	$(".away ul li").click(function(){
		var text = $(this).text();
		$("#away").text(text);
		$(".softBtn").removeClass("on");
		var aindex = $(this).index();
		SCall.CtiBreak(aindex+1);
	});

	// 소프트폰 버튼 이벤트
	$(".softBtn").click(function(){
		// CTI로그인이 되어있지 않은 경우 소프트폰 버튼 사용제한
		if($("#ctiYn").val() != "Y"){
			alert("CTI로그인을 해주세요.");
			return false;
		}else{
			var cindex = $(this).index();
			if(cindex == 1){ // 전화걸기
				var tell = $("#tellNum").val();
				if(tell.length > 4){
					SCall.Device = "9" + tell;
				}else if(tell.length == 4){
					SCall.Device = tell;
				}else{
					alert("전화번호를 다시 입력해주세요.");
					return false;
				}
				SCall.CtiMakeCall();
				call_start(0);
			}else if(cindex == 2){ // 전화받기
				clearInterval(callInterval);
				SCall.CtiAnswer();
				call_start(1);
			}else if(cindex == 3){ // 전화끊기
				SCall.CtiDisconnect();
				call_end();
			}else if(cindex == 4){ // 보류
				if(hold == true){
					SCall.CtiHold();
					hold = false;
				}else{
					SCall.CtiRetrieve();
					$(".softBtn").eq(3).removeClass("cus");
					hold = true;
				}
			}else if(cindex == 5){ // 대기
				var state = CTIState();
				if(state=="P"){
					SCall.CtiBreak(0);
				}else{
					SCall.CtiEndReady();
				}
				$(".softBtn").removeClass("cus");
				$(".softBtn").eq(4).addClass("cus");
			}
			if(cindex != 3){
				$(".softBtn").eq(cindex-1).addClass("cus");
			}
		}
	});
	setInterval("updateTop()",15000);
});

function updateTop(){
	KBIZIO.requestParamAjax("/main/updateTop.json", fn_updateTop);
